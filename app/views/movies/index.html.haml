%h1 All Movies

%table#movies
   %thead
      %tr
         %th #
         %th Movie Title
         %th Rating
         %th Release Date
         %th More Info
   %tbody
      - @movies.each_with_index do |movie, index|
         %tr
            %td.movie-id= index + 1
            %td= movie.title
            %td= movie.rating
            %td= movie.release_date.strftime("%B %e, %Y")
            %td= link_to "More about #{movie.title}", movie_path(movie)
   

= link_to "Add a new movie", new_movie_path

%h1 Search TMDb for a movie

= form_tag 'movies/search_tmdb' do
   %label{:for => 'search_terms'} Search Terms
   = text_field_tag 'search_terms'
   = submit_tag 'Search TMDb'